  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "prepare": "svelte-kit sync || echo ''",
    "build": "vite build",
    "build:prod": "pnpm run optimize:images && vite build && pnpm run optimize:fonts && pnpm run replace:fonts",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint 'src/**/*.{js,ts,svelte}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,svelte}' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "pnpm run format:check && pnpm run lint && pnpm run check",
    "optimize:images": "tsx scripts/optimize-images.ts",
    "optimize:fonts": "tsx scripts/optimize-fonts.ts",
    "replace:fonts": "tsx scripts/replace-fonts.ts",
    "changelog:generate": "node scripts/changelog/generate-changelog.mjs"
  },
