{
	"name": "antoniosarro.dev",
	"description": "Personal Website",
	"version": "1.0.1",
	"author": {
		"name": "Antonio Sarro",
		"url": "https://antoniosarro.dev",
		"email": "contact@antoniosarro.dev"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/antoniosarro/antoniosarro.dev.git"
	},
	"type": "module",
	"scripts": {
		"prebuild": "rimraf .svelte-kit && rimraf build",
		"pre-commit": "lint-staged",
		"dev:sveltekit": "vite dev",
		"dev:sveltekit:host": "vite dev --host=0.0.0.0",
		"dev": "pnpm dev:sveltekit",
		"dev:host": "pnpm dev:sveltekit:host",
		"dev:open": "pnpm dev --open",
		"dev:host:open": "pnpm dev --open --host",
		"build": "vite build",
		"preview": "vite preview",
		"preview:open": "pnpm preview --open",
		"preview:host": "pnpm preview --host",
		"preview:host:open": "pnpm preview --open --host",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"eslint": "eslint .",
		"eslint:fix": "eslint . --fix",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@giscus/svelte": "^3.1.0",
		"@huntabyte/mdsvex": "^0.16.8",
		"@shikijs/transformers": "^2.3.2",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"autoprefixer": "^10.4.20",
		"cssnano": "^7.0.6",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^2.46.1",
		"esm-env": "^1.2.2",
		"globals": "^15.14.0",
		"hast-util-to-html": "^9.0.4",
		"husky": "^9.1.7",
		"iconify-icon": "^2.3.0",
		"linkedom": "^0.18.7",
		"lint-staged": "^15.4.2",
		"mdsvex-reading-time": "^1.0.5",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"rehype-pretty-code": "^0.14.0",
		"rehype-slug": "^6.0.0",
		"rimraf": "^6.0.1",
		"shiki": "^2.3.2",
		"super-sitemap": "^1.0.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-meta-tags": "^4.1.0",
		"svelte-sonner": "^0.3.28",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"unist-util-visit": "^5.0.0",
		"vite": "^6.0.0",
		"zod": "^3.24.1"
	}
}
